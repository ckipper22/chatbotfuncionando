{
  "compilerOptions": {
    "target": "ES2020", // Sugeri ES2020 para recursos mais modernos, mas ES2017 tambÃ©m funciona.
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // ðŸš€ MUDANÃ‡AS AQUI PARA RESOLVER CAMINHOS
    "baseUrl": ".", // Diz ao TypeScript para resolver caminhos absolutos a partir da raiz do projeto
    "paths": {
      "@/*": ["./*"] // Mapeia "@/" para a raiz do projeto (onde packages/multi-tenant estÃ¡)
    },
    "forceConsistentCasingInFileNames": true // Boa prÃ¡tica adicionada
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}